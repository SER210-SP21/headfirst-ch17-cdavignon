    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.quinnipiac.ser210.tasks.EditTaskFragment">
    <data>
        <variable
            name="viewModel"
            type="edu.quinnipiac.ser210.tasks.EditTaskViewModel" />
    </data>

<LinearLayout
